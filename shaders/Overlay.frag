#version 450layout (set=0, binding=0) uniform OverlayUBO { float visible; } ubo;layout (set=0, binding=1) uniform sampler2D uTex;layout (location=0) in vec2 vUV;layout (location=0) out vec4 outColor;void main() {    if (ubo.visible < 0.5) discard;    vec4 tex = texture(uTex, vUV);    if (tex.a < 0.001) discard;    outColor = tex;}